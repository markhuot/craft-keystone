{% from '_includes/forms' import field as renderField, textField %}
{% embed "_includes/forms/field" %}
    {% block input %}
        <div class="k-relative">
            <input type="hidden" name="{{ name ~ '[useExpanded]' }}" value="0">
            <input type="checkbox" name="{{ name ~ '[useExpanded]' }}" value="1" id="{{ id ~ 'expand' }}" class="k-peer k-hidden" {{ value.useExpanded|default(false) ? 'checked' }}>

            <div class="peer-checked:k-hidden">
